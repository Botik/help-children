<div class="payment-type-fieldgroup toggle-fieldgroup toggle-fieldgroup--white">
    <label class="payment-type-fieldgroup__label toggle-field">
        <input class="toggle-field__input"
            type="radio"
            name="payment-type"
            value="visa"
            {{ form['payment-type'] == 'visa' ? 'checked' }}>
        <div id="paymentByVisa" class="toggle-field__text paymentimgBlock">
          <img class="toggle-field__text-image paymentimg" src="http://test.pomogitedetyam.ru/Apple_Pay_mini.png" width="20" style="margin-top: -4px;">
	            <img class="toggle-field__text-image paymentimg" src="http://test.pomogitedetyam.ru/Google_Pay_mini.png" width="22">
	            <img class="toggle-field__text-image paymentimg" src="/images/mastercard.png" width="30">
            <img class="toggle-field__text-image paymentimg" src="/images/visa.png" width="40">
        </div>
    </label>
    <label class="payment-type-fieldgroup__label toggle-field">
        <input class="toggle-field__input"
            type="radio"
            name="payment-type"
            value="sms"
            {{ form['payment-type'] == 'sms' ? 'checked' }}>
        <div class="toggle-field__text">Sms оплата</div>
    </label>
    <label class="payment-type-fieldgroup__label toggle-field">
        <input class="toggle-field__input"
            type="radio"
            name="payment-type"
            value="requisite-services"
            {{ form['payment-type'] == 'requisite-services' ? 'checked' }}>
        <div id="paymentByRequisites" class="toggle-field__text">Оплата по реквизитам</div>
    </label>
    <label class="payment-type-fieldgroup__label toggle-field">
        <input class="toggle-field__input"
            type="radio"
            name="payment-type"
            value="eq"
             {{ form['payment-type'] == 'eq' ? 'checked' }}>
        <div class="toggle-field__text">Интернет-сервисы</div>
    </label>
</div>
